<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.GADSNotchers" parent="Theme.AppCompat.Light.NoActionBar">

        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/goldRange</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/black</item>

        <!-- Customize your theme here. -->

    </style>

    <!-- Styles for texts -->
    <style name="TextAppearance.Title" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/goldRange</item>
    </style>

    <!-- Styles for texts -->
    <style name="TextAppearance.Title2" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <!-- Styles for texts -->
    <style name="TextAppearance.TitleAsh" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/ash</item>
    </style>

    <!-- Styles for texts -->
    <style name="TextAppearance.TitleAshVariant" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textSize">26sp</item>
        <item name="android:textColor">@color/ash</item>
    </style>

    <style name="SplashThem" parent="Theme.MaterialComponents.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_screen_bgnd</item>
        <item name="android:windowFullscreen">true</item>
    </style>
</resources>